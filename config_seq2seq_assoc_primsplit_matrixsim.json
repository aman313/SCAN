{
  "dataset_reader": {
    "type": "seq2seq_scan_pair",
    "lazy": true,
    "max_ref":50,
    "same_inst_batch":false,
    //"same_inst_batch_size":40,
    "target_token_indexers": {
      "tokens": {
        "namespace": "target_tokens"
      }
    },
    "source_token_indexers": {
      "tokens": {
        "namespace": "source_tokens"
      }
    }
  },
  "train_data_path": "add_prim_split/tasks_train_devremoved_addprim_jump.txt",
  "validation_data_path": "add_prim_split/tasks_dev_addprim_jump.txt",
  "vocabulary":{
  	"directory_path":"vocab_assoc"
  },
  "model": {
    "type": "associative_seq2seq",
    "source_embedder": {
      "token_embedders": {
        "tokens": {
            "type": "embedding",
            "embedding_dim": 50,
	    "vocab_namespace":"source_tokens",
            "trainable":true
        }
      }
    },
    "target_embedder": {
      "token_embedders": {
        "tokens": {
            "type": "embedding",
            "embedding_dim": 50,
    	    "vocab_namespace":"target_tokens",
            "trainable":true
        }
      }
    },
    "source_encoder": {
        "type": "lstm",
        "bidirectional": true,
        "input_size": 50,
        "hidden_size": 25,
        "num_layers": 2,
        "dropout": 0.5
    },
    "target_encoder": {
        "type": "lstm",
        "bidirectional": true,
        "input_size": 50,
        "hidden_size": 25,
        "num_layers": 2,
        "dropout": 0.5
    },
    "use_bleu": true,
    //"attention": "dot_product",
    "attention": {
        "type":"bilinear",
	"activation":"relu",
	"vector_dim":50,
	"matrix_dim":50
    },
    "max_decoding_steps":100,
    "scheduled_sampling_ratio":0.5,
    "target_namespace":"target_tokens",
    "instance_reference_similarity_function":{
    	    "type":"bilinear",
    	    "matrix_1_dim":50,
    	    "matrix_2_dim":50,
    	    "activation":"relu"
    },
    "target_instance_ref_similarity_function":{
    	    "type":"bilinear",
   	    "matrix_1_dim":50,
    	    "matrix_2_dim":50,
    	    "activation":"relu"
    
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["instance_source_tokens", "num_tokens"],["ref_source_tokens","num_tokens"],["ref_target_tokens","num_tokens"]],
    "batch_size": 40,
    "biggest_batch_first":true
  },
  "validation_iterator": {
    "type": "bucket",
    "sorting_keys": [["instance_source_tokens", "num_tokens"],["ref_source_tokens","num_tokens"],["ref_target_tokens","num_tokens"]],
    "batch_size": 40,
    "biggest_batch_first":true
  },
  "trainer": {
    "num_epochs": 500,
    "grad_norm": 5.0,
    "patience" : 50,
    "cuda_device" : 0,
    "validation_metric":"+BLEU",
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 40
    },
    "optimizer": {
      "type": "adam"
    }
  }
}
