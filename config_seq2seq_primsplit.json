{
  "dataset_reader": {
    "type": "seq2seq_scan",
    "lazy": true,
    //"target_token_indexers": {
    //  "tokens": {
    //    "namespace": "target_tokens"
    //  }
   // },
    //"source_token_indexers": {
    //  "tokens": {
    //    "namespace": "source_tokens"
    //  }
    //}
  },
  "train_data_path": "add_prim_split/tasks_train_devremoved_addprim_jump_balanced.txt",
  "validation_data_path": "add_prim_split/tasks_dev_addprim_jump_balanced.txt",
  //"train_data_path": "simple_split/tasks_train_simple.txt",
  //"validation_data_path": "simple_split/tasks_dev_simple.txt",
  //"vocabulary":{
  //	"directory_path":"vocabulary_simple_split"
  //},
  "model": {
    "type": "simple_seq2seq",
    "source_embedder": {
      "token_embedders": {
        "tokens": {
            "type": "embedding",
            "embedding_dim": 50,
            "trainable":true
        }
      }
    },
    "encoder": {
        "type": "lstm",
        "bidirectional": false,
        "input_size": 50,
        "hidden_size": 25,
        "num_layers": 2,
        "dropout": 0.5
    },
    "use_bleu": true,
    "attention": "dot_product",
    "max_decoding_steps":100,
    "scheduled_sampling_ratio":0.5
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["source_tokens", "num_tokens"]],
    "batch_size": 20,
    "biggest_batch_first":true
  },
  "validation_iterator": {
    "type": "bucket",
    "sorting_keys": [["source_tokens", "num_tokens"]],
    "batch_size": 20,
    "biggest_batch_first":true
  },
  "trainer": {
    "num_epochs": 75,
    "grad_norm": 5.0,
    "patience" : 45,
    "cuda_device" : 0,
    "validation_metric":"+BLEU",
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 35
    },
    "optimizer": {
      "type": "adam"
    }
  }
}
