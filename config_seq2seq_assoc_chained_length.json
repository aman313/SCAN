{
  "dataset_reader": {
    "type": "seq2seq_scan_pair",
    "lazy": true,
    "target_token_indexers": {
      "tokens": {
        "namespace": "target_tokens"
      }
    },
    "source_token_indexers": {
      "tokens": {
        "namespace": "source_tokens"
      }
    }
  },
  "train_data_path": "length_split/tasks_train_devremoved_length.txt",
  "validation_data_path": "length_split/tasks_dev_length.txt",
  //"vocabulary":{
  //	"directory_path":"vocab_assoc"
  //},
  "model": {
    "type": "associative_seq2seq_chained_attention",
    "source_embedder": {
      "token_embedders": {
        "tokens": {
            "type": "embedding",
            "embedding_dim": 50,
	    "vocab_namespace":"source_tokens",
            "trainable":true
        }
      }
    },
    "target_embedder": {
      "token_embedders": {
        "tokens": {
            "type": "embedding",
            "embedding_dim": 50,
    	    "vocab_namespace":"target_tokens",
            "trainable":true
        }
      }
    },
    "source_encoder": {
        "type": "lstm",
        "bidirectional": true,
        "input_size": 50,
        "hidden_size": 25,
        "num_layers": 2,
        "dropout": 0.2
    },
    "target_encoder": {
        "type": "lstm",
        "bidirectional": true,
        "input_size": 50,
        "hidden_size": 25,
        "num_layers": 2,
        "dropout": 0.2
    },
    "use_bleu": true,
    "attention": {
        "type":"cosine",
	//"activation":"sigmoid",
	//"combination":"x,y,x*y,x+y,x-y,x/y",
	//"tensor_1_dim":50,
	//"tensor_2_dim":50
    },
    "s2s_attention": {
        "type":"cosine",
	//"activation":"sigmoid",
	//"combination":"x,y,x*y,x+y,x-y,x/y",
	//"tensor_1_dim":50,
	//"tensor_2_dim":50
    },
    "t2t_attention": {
        "type":"cosine",
	//"activation":"sigmoid",
	//"combination":"x,y,x*y,x+y,x-y,x/y",
	//"tensor_1_dim":50,
	//"tensor_2_dim":50
    },
    "max_decoding_steps":100,
    "scheduled_sampling_ratio":0.5,
    "target_namespace":"target_tokens"
    //"instance_reference_similarity_function":{
    //	    "type":"bilinear",
    //	    "matrix_1_dim":50,
    //	    "matrix_2_dim":50,
    //	    "activation":"tanh"
    //}
    //"target_instance_ref_similarity_function":{
    //	    "type":"bilinear",
   //	    "matrix_1_dim":50,
    //	    "matrix_2_dim":50,
    //	    "activation":"tanh"
    
    //}
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["instance_source_tokens", "num_tokens"],["ref_source_tokens","num_tokens"],["ref_target_tokens","num_tokens"]],
    "batch_size": 20,
    "biggest_batch_first":true
  },
  "validation_iterator": {
    "type": "bucket",
    "sorting_keys": [["instance_source_tokens", "num_tokens"],["ref_source_tokens","num_tokens"],["ref_target_tokens","num_tokens"]],
    "batch_size": 20,
    "biggest_batch_first":true
  },
  "trainer": {
    "num_epochs": 100,
    "grad_norm": 5.0,
    "patience" : 25,
    "cuda_device" : 0,
    "validation_metric":"+BLEU",
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 20
    },
    "optimizer": {
      "type": "adam"
    }
  }
}
